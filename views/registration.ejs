<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tactile Experiment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;800&family=Ubuntu&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous"/>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        body {
            background-color: #F1EAFF;
            font-family: "Montserrat", sans-serif;
        }

        .registry-form {
            width: 100%;
            max-width: 600px; /* Ajuste o tamanho máximo conforme necessário */
            padding: 40px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 0 auto; /* Centraliza o formulário na página */
            margin-top: 60px; /* Espaço acima do formulário */
            margin-bottom: 60px; /* Espaço abaixo do formulário */
        }

        .fieldset-spacing {
            margin-bottom: 20px;
        }

        .success-message {
            display: none;
            color: green;
            margin-top: 20px;
        }
    </style>
</head>
<body style="min-width: 372px">
    <div class="d-flex flex-column wrapper">

        <%- include('navbar') %>
        
        <main>
            <div class="container">
                <br>
                <br>
                <div class="text-center">
                    <h1>Registration Area</h1>
                    <p>Enter your data to create your account!</p>
                </div>
                <hr>
                <form class="registry-form" id="accountForm" action="/confirmed_account" method="post">              
                    
                        <div class="col-sm-12 col-md-12">
                            <fieldset class="row">
                                <legend>Username</legend>
                                <div class="mb-3 col-md-6">
                                    <input type="text" class="form-control" id="txtNome" name="username">
                                </div>
                            </fieldset>
            
                            <fieldset class="fieldset-spacing">
                                <legend>Select your gender:</legend>
            
                                <input type="radio" id="male" name="gender" value="male">
                                <label for="male">Male</label><br>
            
                                <input type="radio" id="female" name="gender" value="female">
                                <label for="female">Female</label><br>
            
                                <input type="radio" id="other" name="gender" value="other">
                                <label for="other">Other</label><br>
            
                                <input type="radio" id="prefer-not-to-say" name="gender" value="prefer-not-to-say">
                                <label for="prefer-not-to-say">Prefer not to say</label><br>
                            </fieldset>
            
                            <fieldset>
                                <legend>Birth date</legend>
                                <div class="mb-3 col-md-6 col-xl-4">
                                    <input type="date" class="form-control" id="txtNascimento" name="birthdate">
                                </div>
                            </fieldset>
            
                            <fieldset>
                                <legend>Contacts</legend>
                                <div class="mb-3 col-md-6">
                                    <label for="txtemail" class="form-label">E-mail</label>
                                    <input type="email" class="form-control" id="txtemail" name="email">
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="txttel" class="form-label">Phone number</label>
                                    <span class="form-text">(only numbers)</span>
                                    <input type="tel" class="form-control" id="txttel" placeholder="84998765432" name="phone">
                                </div>
                            </fieldset>
                        </div>
                    
                    <hr>
                    <div class="mb-3">
                        <a class="btn btn-light btn-info" href="/views/indeex.ejs">Cancel</a>
                        <input type="submit" value="Create account" class="btn btn-dark">
                    </div>
                    <div id="successMessage" class="success-message">Account created successfully!</div>
                </form>
            </div>
            <br>
        </main>
        
        <%- include('footer') %>

    </div>
    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        document.getElementById('loginButton').addEventListener('click', function() {
          window.location.href = '/views/login.ejs';
        });
        
        document.getElementById('registryButton').addEventListener('click', function() {
          window.location.href = '/views/registration.ejs';
        });

        document.getElementById('aboutWebPage').addEventListener('click', function() {
          window.location.href = '/views/about.ejs';
        });
    </script>
</body>
</html>
