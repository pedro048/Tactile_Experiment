<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;800&family=Ubuntu&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous"/>
    <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <title>Tactile Experiment</title>

    <link rel="shortcut icon" href="website_img/favicon.ico" type="image/x-icon">

    <style>
        body {
            background-color: #F1EAFF;
            font-family: "Montserrat";
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        footer {
            background-color: rgba(0, 0, 0, 0.05);
            padding: 1rem 0;
        }

        .login-form {
            width: 100%;
            max-width: 400px; /* Ajuste o tamanho máximo conforme necessário */
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .login-form h1 {
            margin-bottom: 20px;
        }
    </style>
</head>
<body style="min-width: 372px">
    <div class="d-flex flex-column wrapper">

        <%- include('navbar') %>
        
        <main>
            <form class="login-form" action="/confirmed_login" method="post">
                <h1 class="mb-3">Login Area</h1>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="txtNome1" name="username1" placeholder=" ">
                    <label for="txtNome1">Username</label>
                </div>

                <input type="submit" value="Log in" class="btn btn-dark">    
                <p class="mt-3">Don't have an account yet? <a href="/views/registration.ejs">Click here</a> to register.</p>
            </form>
        </main>
        
        <%- include('footer') %>

    </div>
    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        document.getElementById('loginButton').addEventListener('click', function() {
          window.location.href = '/views/login.ejs';
        });
        
        document.getElementById('registryButton').addEventListener('click', function() {
          window.location.href = '/views/registration.ejs';
        });

        document.getElementById('aboutWebPage').addEventListener('click', function() {
          window.location.href = '/views/about.ejs';
        });
    </script>
</body>
</html>
